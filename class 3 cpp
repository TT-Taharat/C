#include<bits/stdc++.h>
using namespace std;
class triangle
{
    int a,b,c,area,perimeter;
public:

    void input( int arm1,int arm2,int arm3)
    {
       a=arm1;
       b=arm2;
       c=arm3;
    }
    void calc()
    {
        area=0.5*a*b;
        cout<<area<<endl;

    }
    void calc2()
    {
        perimeter=a+b+c;
        cout<<perimeter<<endl;
    }

};
int main()
{
    triangle X;
    int x=3,y=4,z=5;
    cin>>x>>y>>z;
    X.calc();
    X.calc2();


    return 0;
}
